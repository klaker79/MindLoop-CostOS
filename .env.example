# MindLoop CostOS - Environment Variables
# Copy this file to .env and fill in your values

# =============================================
# API Configuration
# =============================================

# Backend API Base URL (without trailing slash)
VITE_API_BASE_URL=https://lacaleta-api.mindloop.cloud

# Chat Webhook URL (n8n integration) - OBLIGATORIO
VITE_CHAT_WEBHOOK_URL=https://your-n8n-instance/webhook/your-webhook-id

# =============================================
# Application Settings
# =============================================

# Application name
VITE_APP_NAME=MindLoop CostOS

# Application version
VITE_APP_VERSION=2.0.0

# Environment (development, staging, production)
VITE_APP_ENV=production

# =============================================
# Feature Flags (optional)
# =============================================

# Enable debug mode (shows console logs)
VITE_ENABLE_DEBUG=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# =============================================
# Cache Settings (optional)
# =============================================

# Cache TTL for recipes (ms) - default: 300000 (5 min)
VITE_CACHE_TTL_RECIPES=300000

# Cache TTL for KPIs (ms) - default: 60000 (1 min)
VITE_CACHE_TTL_KPI=60000

# =============================================
# Stock Alerts (optional)
# =============================================

# Stock warning threshold (0-1) - default: 0.2 (20%)
VITE_STOCK_WARNING_THRESHOLD=0.2

# =============================================
# External Services (optional)
# =============================================

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=

# =============================================
# Notes:
# - All variables must start with VITE_ to be exposed to the client
# - Restart dev server after changing .env file
# - Never commit .env to git (already in .gitignore)
# - Update these values for different environments (dev/staging/prod)
# =============================================
